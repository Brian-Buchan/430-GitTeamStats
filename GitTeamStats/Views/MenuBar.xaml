<UserControl x:Class="GitTeamStats.Views.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitTeamStats.Views"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <Grid Background="DimGray" DataContext="{Binding RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Logout" Content="Logout" Margin="10,22,0,23" HorizontalAlignment="Left" Width="75" Click="Logout_Click"/>
        <Button x:Name="OpenRepo" Content="Open Repo" Margin="0,22,10,23" HorizontalAlignment="Right" Width="75" Command="{Binding Command}" Grid.Column="2"/>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="Open Repository:" Height="26" Width="102" />
            <Label VerticalAlignment="Center" HorizontalAlignment="Center"  Height="26" Width="auto" Content="{Binding Path=DataContext.RepoText}"/>
        </StackPanel>
    </Grid>
</UserControl>
