<UserControl x:Class="GitTeamStats.Views.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitTeamStats.Views"
             mc:Ignorable="d" 
             d:DesignHeight="75" d:DesignWidth="800">
    <Grid Background="DimGray" DataContext="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type UserControl}}}">
        <Button x:Name="Logout" Height="30" Content="Logout" Margin="10,22,0,23" HorizontalAlignment="Left" Width="75" Click="Logout_Click"/>
        <Button x:Name="OpenRepo" Height="30" Content="Open Repo" Margin="0,22,10,23" HorizontalAlignment="Right" Width="75" Command="{Binding Command}"/>
    </Grid>
</UserControl>
